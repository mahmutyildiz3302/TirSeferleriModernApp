<Window x:Class="TirSeferleriModernApp.Views.Detay.DorseDetayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dorse Detay" Height="300" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="Plaka"/>
                <TextBox x:Name="txtPlaka"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Tip"/>
                <TextBox x:Name="txtTip"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Kaydet" Width="120" Margin="0,0,8,0" Click="BtnKaydet_Click"/>
            <Button Content="Kapat" Width="100" Click="BtnKapat_Click"/>
        </StackPanel>
    </Grid>
</Window>