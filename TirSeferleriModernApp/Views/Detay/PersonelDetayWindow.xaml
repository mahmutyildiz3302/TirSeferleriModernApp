<Window x:Class="TirSeferleriModernApp.Views.Detay.PersonelDetayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personel Detay" Height="320" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Ad"/>
                <TextBox x:Name="txtAd"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Telefon"/>
                <TextBox x:Name="txtTelefon"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Kaydet" Width="120" Margin="0,0,8,0" Click="BtnKaydet_Click"/>
            <Button Content="Kapat" Width="100" Click="BtnKapat_Click"/>
        </StackPanel>
    </Grid>
</Window>