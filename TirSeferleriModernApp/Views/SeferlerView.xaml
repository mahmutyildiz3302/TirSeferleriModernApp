<UserControl x:Class="TirSeferleriModernApp.Views.SeferlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:TirSeferleriModernApp.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:TirSeferleriModernApp.Converters"
             x:Name="RootSeferlerView"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <conv:RowIndexToNumberConverter x:Key="RowIndexToNumber"/>
        <conv:EkstraDisplayConverter x:Key="EkstraDisplayConverter"/>
        <conv:HideOnToplamConverter x:Key="HideOnToplamConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sol: Form (ScrollViewer ile) -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#3F5F90" Padding="20" MinWidth="320">
            <StackPanel Margin="20">
                <TextBlock Text="Yeni Sefer Girişi" FontSize="20" FontWeight="Bold" Foreground="#F5F9FF" Margin="0,0,0,20"/>

                <!-- Fiyat (otomatik) EN ÜSTE ALINDI -->
                <TextBlock Text="Fiyat (otomatik):" Foreground="#F5F9FF"/>
                <TextBlock Background="#F5F9FF" Foreground="#22335A" Padding="8,4" Margin="0,5,0,10"
                           Text="{Binding SeciliSefer.Fiyat, StringFormat={}{0:N2}}"/>

                <!-- Konteyner No -->
                <TextBlock Text="Konteyner No:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.KonteynerNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="200" Margin="0,5,0,10"/>

                <!-- İSTENEN SIRA: Yükleme, Boşaltma, Boyut, Boş/Dolu, Ekstra, (Açıklama) -->
                <TextBlock Text="Yükleme Yeri:" Foreground="#F5F9FF"/>
                <ComboBox Background="White"
                          ItemsSource="{Binding DepoAdlari}"
                          SelectedItem="{Binding SeciliSefer.YuklemeYeri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="False"
                          MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Boşaltma Yeri:" Foreground="#F5F9FF"/>
                <ComboBox Background="White"
                          ItemsSource="{Binding DepoAdlari}"
                          SelectedItem="{Binding SeciliSefer.BosaltmaYeri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="False"
                          MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Boyut:" Foreground="#F5F9FF"/>
                <ComboBox Background="White" SelectedValue="{Binding SeciliSefer.KonteynerBoyutu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" MinWidth="200" Margin="0,5,0,10">
                    <ComboBoxItem Content="20" />
                    <ComboBoxItem Content="40" />
                </ComboBox>

                <TextBlock Text="Boş/Dolu:" Foreground="#F5F9FF"/>
                <ComboBox Background="White"
                          ItemsSource="{Binding BosDoluSecenekleri}"
                          SelectedItem="{Binding SeciliSefer.BosDolu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="False"
                          MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Emanet/Soda:" Foreground="#F5F9FF"/>
                <ComboBox Background="White"
                          ItemsSource="{Binding EkstraAdlari}"
                          SelectedItem="{Binding SeciliSefer.Ekstra, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="False"
                          MinWidth="200" Margin="0,5,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EkstraDisplayConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Açıklama:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.Aciklama, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="200" Margin="0,5,0,20"/>

                <!-- Kaydet/Güncelle butonu -->
                <Button Command="{Binding KaydetVeyaGuncelleCommand}"
                        Background="White" Foreground="#22335A"
                        Margin="0,10,0,0" Padding="10,5"
                        HorizontalAlignment="Stretch"
                        ToolTip="Formdaki sefer bilgilerini kaydeder veya seçili seferi günceller.">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSave" Foreground="#22335A" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding KaydetButonMetni, FallbackValue=Kaydet/Güncelle, TargetNullValue=Kaydet/Güncelle}"/>
                    </StackPanel>
                </Button>

                <!-- Temizle butonu -->
                <Button Command="{Binding SecimiTemizleCommand}"
                        Background="White" Foreground="#22335A"
                        Margin="0,10,0,0" Padding="10,5"
                        HorizontalAlignment="Stretch"
                        ToolTip="Form alanlarını temizler ve yeni giriş için hazırlar.">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Broom" Foreground="#22335A" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TemizleButonMetni, FallbackValue=Temizle, TargetNullValue=Temizle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </ScrollViewer>

        <!-- Sağ: Liste (çerçeveli ve düzgün hizalı) -->
        <Border Grid.Column="1"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        CornerRadius="6"
        Padding="5"
        Margin="10,0,0,0"
        Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Üst bilgi şeridi -->
                <Border Grid.Row="0" Background="#F0F4FF" BorderBrush="#D0D7F2" BorderThickness="0 0 0 1" Padding="8" VerticalAlignment="Top">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Şoför: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding SeciliSoforAdi, TargetNullValue=-}" Margin="6,0,0,0"/>
                            <TextBlock Text=" | Çekici: " FontWeight="Bold" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding SeciliCekiciPlaka, TargetNullValue=-}" Margin="6,0,0,0"/>
                            <TextBlock Text=" | Dorse: " FontWeight="Bold" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding SeciliDorsePlaka, TargetNullValue=-}" Margin="6,0,0,0"/>

                            <!-- Ay filtreleme: Tümü + 12 ay butonu (taşma olursa yatay kaydır) -->
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <Button Content="Tümü" Margin="4,0" Padding="8,2" Command="{Binding SelectMonthCommand}" CommandParameter="{x:Null}"/>
                                <Button Content="Ocak" Margin="4,0" Padding="8,2" Command="{Binding SelectMonthCommand}" CommandParameter="1"/>
                                <Button Content="Şubat" Margin="4,0" Padding="8,2" Command="{Binding SelectMonthCommand}" CommandParameter="2"/>
                                <Button Content="Mart" Margin="4,0" Padding="8,2" CommandParameter="3" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Nisan" Margin="4,0" Padding="8,2" CommandParameter="4" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Mayıs" Margin="4,0" Padding="8,2" CommandParameter="5" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Haziran" Margin="4,0" Padding="8,2" CommandParameter="6" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Temmuz" Margin="4,0" Padding="8,2" CommandParameter="7" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Ağustos" Margin="4,0" Padding="8,2" CommandParameter="8" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Eylül" Margin="4,0" Padding="8,2" CommandParameter="9" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Ekim" Margin="4,0" Padding="8,2" CommandParameter="10" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Kasım" Margin="4,0" Padding="8,2" CommandParameter="11" Command="{Binding SelectMonthCommand}"/>
                                <Button Content="Aralık" Margin="4,0" Padding="8,2" CommandParameter="12" Command="{Binding SelectMonthCommand}"/>
                            </StackPanel>

                            <!-- Yıl seçimi -->
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Yıl:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <ComboBox Width="80" ItemsSource="{Binding YilSecenekleri}" SelectedItem="{Binding SeciliYil, Mode=TwoWay}"/>
                            </StackPanel>

                            <!-- Kaynak Göster toggle -->
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                                <CheckBox Content="Kaynak Göster" IsChecked="{Binding KaynakGoster, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <DataGrid Grid.Row="1" x:Name="dgSeferler" Margin="0"
                          ItemsSource="{Binding SeferListesi}"
                          AutoGenerateColumns="False"
                          SelectedItem="{Binding SeciliSefer, Mode=TwoWay}"
                          IsReadOnly="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Background="White"
                          RowBackground="#F5F6FA"
                          AlternatingRowBackground="#E9ECF3"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          RowHeight="35"
                          ColumnHeaderHeight="35"
                          ColumnWidth="SizeToCells"
                          MinColumnWidth="60"
                          AlternationCount="1000000"
                          ContextMenuOpening="dgSeferler_ContextMenuOpening"
                          CellEditEnding="dgSeferler_CellEditEnding"
                          PreviewKeyDown="dgSeferler_PreviewKeyDown">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <!-- Varsayılan tooltip: Kaynak bilgisi (sadece açıkken) -->
                            <Setter Property="ToolTip" Value="{Binding DataKaynak}"/>
                            <Style.Triggers>
                                <!-- KaynakGoster && SQLite -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding DataKaynak}" Value="SQLite"/>
                                        <Condition Binding="{Binding DataContext.KaynakGoster, ElementName=RootSeferlerView}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#FFF5F5F5"/>
                                </MultiDataTrigger>
                                <!-- KaynakGoster && Firestore -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding DataKaynak}" Value="Firestore"/>
                                        <Condition Binding="{Binding DataContext.KaynakGoster, ElementName=RootSeferlerView}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#FFFFF7E6"/>
                                </MultiDataTrigger>
                                <!-- Toplam satırını nötr yap -->
                                <DataTrigger Binding="{Binding Aciklama}" Value="Toplam">
                                    <Setter Property="Background" Value="White"/>
                                </DataTrigger>
                                <!-- Kaynak kapalıyken tooltip kaldır -->
                                <DataTrigger Binding="{Binding DataContext.KaynakGoster, ElementName=RootSeferlerView}" Value="False">
                                    <Setter Property="ToolTip" Value="{x:Null}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="LightSkyBlue"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Kaynak sütunu (gizlenebilir) -->
                        <DataGridTemplateColumn Header="Kaynak" Width="65"
                                                Visibility="{Binding DataContext.KaynakGoster, ElementName=RootSeferlerView, Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- DB rozeti -->
                                        <Border CornerRadius="10" Padding="6,2" Margin="0,0,2,0" Background="#E0E0E0">
                                            <TextBlock Text="DB" Foreground="#333" FontWeight="Bold"/>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataKaynak}" Value="SQLite"/>
                                                                <Condition Binding="{Binding Aciklama}" Value="Toplam"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataKaynak}" Value="SQLite"/>
                                                                <Condition Binding="{Binding Aciklama}" Value="Toplam"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </MultiDataTrigger>
                                                        <DataTrigger Binding="{Binding DataKaynak}" Value="SQLite">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Aciklama}" Value="Toplam">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <!-- FS rozeti -->
                                        <Border CornerRadius="10" Padding="6,2" Margin="2,0,0,0" Background="#FFE6C7">
                                            <TextBlock Text="FS" Foreground="#8A4B00" FontWeight="Bold"/>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataKaynak}" Value="Firestore">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Aciklama}" Value="Toplam">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Sıra numarası sütunu -->
                        <DataGridTemplateColumn Header="#" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                                <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="AlternationIndex"/>
                                                <Binding Path="Aciklama"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Sefer ID" Binding="{Binding SeferId}" Visibility="Collapsed" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Konteyner No">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                    <Binding Path="KonteynerNo"/>
                                    <Binding Path="Aciklama"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Boyut">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                    <Binding Path="KonteynerBoyutu"/>
                                    <Binding Path="Aciklama"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <!-- Yükleme: görüntüde metin, düzenlemede ComboBox -->
                        <DataGridTemplateColumn Header="Yükleme">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                                <Binding Path="YuklemeYeri"/>
                                                <Binding Path="Aciklama"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.DepoAdlari, ElementName=RootSeferlerView}"
                                              SelectedItem="{Binding YuklemeYeri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Boşaltma: görüntüde metin, düzenlemede ComboBox -->
                        <DataGridTemplateColumn Header="Boşaltma">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                                <Binding Path="BosaltmaYeri"/>
                                                <Binding Path="Aciklama"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.DepoAdlari, ElementName=RootSeferlerView}"
                                              SelectedItem="{Binding BosaltmaYeri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ekstra: görüntüde metin, düzenlemede ComboBox -->
                        <DataGridTemplateColumn Header="Emanet/Soda">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                                <Binding Path="Ekstra" Converter="{StaticResource EkstraDisplayConverter}"/>
                                                <Binding Path="Aciklama"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.EkstraAdlari, ElementName=RootSeferlerView}"
                                              SelectedItem="{Binding Ekstra, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource EkstraDisplayConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Boş/Dolu: görüntüde metin, düzenlemede ComboBox -->
                        <DataGridTemplateColumn Header="Boş/Dolu">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                                <Binding Path="BosDolu"/>
                                                <Binding Path="Aciklama"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.BosDoluSecenekleri, ElementName=RootSeferlerView}"
                                              SelectedItem="{Binding BosDolu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Tarih">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                    <Binding Path="Tarih"/>
                                    <Binding Path="Aciklama"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Saat">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                    <Binding Path="Saat"/>
                                    <Binding Path="Aciklama"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Fiyat" Binding="{Binding Fiyat, StringFormat={}{0:N2}}" IsReadOnly="True" Width="SizeToCells"/>
                        <DataGridTextColumn Header="KDV" Binding="{Binding Kdv, StringFormat={}{0:N2}}" IsReadOnly="True" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Tevkifat" Binding="{Binding Tevkifat, StringFormat={}{0:N2}}" IsReadOnly="True" Width="SizeToCells"/>
                        <DataGridTextColumn Header="KDV Dahil Tutar" Binding="{Binding KdvDahilTutar, StringFormat={}{0:N2}}" IsReadOnly="True" Width="SizeToCells"/>
                        <DataGridTextColumn Header="Açıklama" Binding="{Binding Aciklama, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Çekici ID" Binding="{Binding CekiciId}" Visibility="Collapsed" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Çekici Plaka">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource HideOnToplamConverter}">
                                    <Binding Path="CekiciPlaka"/>
                                    <Binding Path="Aciklama"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Dorse ID" Binding="{Binding DorseId}" Visibility="Collapsed" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Şoför ID" Binding="{Binding SoforId}" Visibility="Collapsed" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Şoför Adı" Binding="{Binding SoforAdi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Boş veri mesajı -->
                <TextBlock Grid.Row="1" Text="Kayıtlı sefer yok" Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Value="0">
                                    <DataTrigger.Binding>
                                        <Binding Path="SeferListesi.Count"/>
                                    </DataTrigger.Binding>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Durum çubuğu -->
                <Border Grid.Row="2" Background="#F7F7F9" BorderBrush="#D0D0D0" BorderThickness="1,1,1,0" Padding="6">
                    <DockPanel LastChildFill="False">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <TextBlock Text="Senkron: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding SenkronDurumu}"/>
                            <TextBlock Text="  |  "/>
                            <TextBlock Text="SQLite: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding SQLiteSayisi}"/>
                            <TextBlock Text="  |  "/>
                            <TextBlock Text="Firestore: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding FirestoreSayisi}"/>
                            <TextBlock Text="  |  "/>
                            <TextBlock Text="Yerel: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding SonYerelOkumaZamani, StringFormat={}{0:HH:mm}, TargetNullValue=-}"/>
                            <TextBlock Text="  |  "/>
                            <TextBlock Text="Uzak: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding SonUzakGuncellemeZamani, StringFormat={}{0:HH:mm}, TargetNullValue=-}"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>