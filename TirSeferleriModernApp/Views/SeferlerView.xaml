<UserControl x:Class="TirSeferleriModernApp.Views.SeferlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:TirSeferleriModernApp.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sol: Form (ScrollViewer ile) -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#3F5F90" Padding="20" MinWidth="320">
            <StackPanel Margin="20">
                <TextBlock Text="Yeni Sefer Girişi" FontSize="20" FontWeight="Bold" Foreground="#F5F9FF" Margin="0,0,0,20"/>

                <TextBlock Text="Konteyner No:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.KonteynerNo, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Boyut:" Foreground="#F5F9FF"/>
                <ComboBox Background="White" SelectedValue="{Binding SeciliSefer.KonteynerBoyutu, Mode=TwoWay}" SelectedValuePath="Content" MinWidth="200" Margin="0,5,0,10">
                    <ComboBoxItem Content="20" />
                    <ComboBoxItem Content="40" />
                </ComboBox>

                <TextBlock Text="Yükleme Yeri:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.YuklemeYeri, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Boşaltma Yeri:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.BosaltmaYeri, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Tarih:" Foreground="#F5F9FF"/>
                <DatePicker SelectedDate="{Binding SeciliSefer.Tarih, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Saat:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.Saat, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Fiyat:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.Fiyat, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,10"/>

                <TextBlock Text="Açıklama:" Foreground="#F5F9FF"/>
                <TextBox Background="White" Text="{Binding SeciliSefer.Aciklama, Mode=TwoWay}" MinWidth="200" Margin="0,5,0,20"/>

                <!-- Kaydet/Güncelle butonu -->
                <Button Command="{Binding KaydetVeyaGuncelleCommand}"
                        Background="White" Foreground="#22335A"
                        Margin="0,10,0,0" Padding="10,5"
                        HorizontalAlignment="Stretch"
                        ToolTip="Formdaki sefer bilgilerini kaydeder veya seçili seferi günceller.">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSave" Foreground="#22335A" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding KaydetButonMetni, FallbackValue=Kaydet/Güncelle, TargetNullValue=Kaydet/Güncelle}"/>
                    </StackPanel>
                </Button>

                <!-- Temizle butonu -->
                <Button Command="{Binding SecimiTemizleCommand}"
                        Background="White" Foreground="#22335A"
                        Margin="0,10,0,0" Padding="10,5"
                        HorizontalAlignment="Stretch"
                        ToolTip="Form alanlarını temizler ve yeni giriş için hazırlar.">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Broom" Foreground="#22335A" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TemizleButonMetni, FallbackValue=Temizle, TargetNullValue=Temizle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </ScrollViewer>

        <!-- Sağ: Liste (çerçeveli ve düzgün hizalı) -->
        <Border Grid.Column="1"
        BorderThickness="1"
        BorderBrush="#D0D0D0"
        CornerRadius="6"
        Padding="5"
        Margin="10,0,0,0"
        Background="White">
            <Grid>
                <!-- Üst bilgi şeridi -->
                <Border Background="#F0F4FF" BorderBrush="#D0D7F2" BorderThickness="0 0 0 1" Padding="8" VerticalAlignment="Top" Height="38">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Şoför: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SeciliSoforAdi, TargetNullValue=-}" Margin="6,0,0,0"/>
                        <TextBlock Text=" | Çekici: " FontWeight="Bold" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding SeciliCekiciPlaka, TargetNullValue=-}" Margin="6,0,0,0"/>
                        <TextBlock Text=" | Dorse: " FontWeight="Bold" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding SeciliDorsePlaka, TargetNullValue=-}" Margin="6,0,0,0"/>
                    </StackPanel>
                </Border>

                <DataGrid x:Name="dgSeferler" Margin="0,40,0,0"
                          ItemsSource="{Binding SeferListesi}"
                          AutoGenerateColumns="False"
                          SelectedItem="{Binding SeciliSefer, Mode=TwoWay}"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Background="White"
                          RowBackground="#F5F6FA"
                          AlternatingRowBackground="#E9ECF3"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          RowHeight="35"
                          ColumnHeaderHeight="35"
                          ContextMenuOpening="dgSeferler_ContextMenuOpening">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="LightSkyBlue"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sefer ID" Binding="{Binding SeferId}" Width="40"/>
                        <DataGridTextColumn Header="Konteyner No" Binding="{Binding KonteynerNo}" Width="*"/>
                        <DataGridTextColumn Header="Boyut" Binding="{Binding KonteynerBoyutu}" Width="60"/>
                        <DataGridTextColumn Header="Yükleme" Binding="{Binding YuklemeYeri}" Width="*"/>
                        <DataGridTextColumn Header="Boşaltma" Binding="{Binding BosaltmaYeri}" Width="*"/>
                        <DataGridTextColumn Header="Tarih" Binding="{Binding Tarih, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Saat" Binding="{Binding Saat}" Width="80"/>
                        <DataGridTextColumn Header="Fiyat" Binding="{Binding Fiyat}" Width="80"/>
                        <DataGridTextColumn Header="Açıklama" Binding="{Binding Aciklama}" Width="*"/>
                        <DataGridTextColumn Header="Çekici ID" Binding="{Binding CekiciId}" Width="60"/>
                        <DataGridTextColumn Header="Çekici Plaka" Binding="{Binding CekiciPlaka}" Width="100"/>
                        <DataGridTextColumn Header="Dorse ID" Binding="{Binding DorseId}" Width="60"/>
                        <DataGridTextColumn Header="Şoför ID" Binding="{Binding SoforId}" Width="60"/>
                        <DataGridTextColumn Header="Şoför Adı" Binding="{Binding SoforAdi}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Boş veri mesajı -->
                <TextBlock Text="Kayıtlı sefer yok" Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Value="0">
                                    <DataTrigger.Binding>
                                        <Binding Path="SeferListesi.Count"/>
                                    </DataTrigger.Binding>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Snackbar -->
        <materialDesign:Snackbar x:Name="MainSnackbar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16" MessageQueue="{Binding MessageQueue, Mode=OneWay}" />
    </Grid>
</UserControl>