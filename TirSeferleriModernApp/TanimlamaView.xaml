<UserControl x:Class="TirSeferleriModernApp.Views.TanimlamaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialDesignControls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             Background="#F0F0F0">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Orientation="Vertical" >
            <!-- Çekici Tanımı -->
            <Border Background="#E8F0FE" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sol: Form -->
                    <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,10,0" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="Çekici Tanımı" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBox x:Name="txtCekiciPlaka" materialDesignControls:HintAssist.Hint="Yeni Çekici Plakası Giriniz" Width="300" Margin="0,0,10,5"/>
                                    <ComboBox x:Name="cmbDorseId" materialDesignControls:HintAssist.Hint="Takılı Dorse Seçin" Width="300" Margin="0,0,10,5" DisplayMemberPath="Plaka" SelectedValuePath="DorseId"/>
                                    <ComboBox x:Name="cmbSoforId" materialDesignControls:HintAssist.Hint="Atanan Şoför Seçin" Width="300" Margin="0,0,10,5" DisplayMemberPath="SoforAdi" SelectedValuePath="SoforId"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <CheckBox x:Name="chkAktifMi" Content="Araç aktif çalışıyor mu?" Margin="0,0,0,10"/>
                                </StackPanel>
                            </StackPanel>
                            <!-- Çekici Butonları -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Güncelle" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnCekiciGuncelle_Click"/>
                                <Button Content="Kaydet" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnCekiciKaydet_Click"/>
                                <Button Content="Sil" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="Sil_Click"/>
                                <Button Content="Arşiv" Width="120" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnCekiciArsiv_Click"/>
                                <Button Content="Eksikleri Düzelt" Width="140" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnCekiciEksikleriniDuzelt_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Sağ: DataGrid -->
                    <DataGrid Grid.Column="1" x:Name="dgCekiciler" AutoGenerateColumns="True" IsReadOnly="True" Background="White" MinHeight="220" HorizontalAlignment="Stretch" MouseDoubleClick="dgCekiciler_MouseDoubleClick">
                        <DataGrid.Columns>
                            <!-- Geri Al sütunu sadece arşiv görünümünde görünür -->
                            <DataGridTemplateColumn x:Name="colCekiciUnarchive" Header="İşlem">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Geri Al" Padding="6,2" Click="BtnCekiciGeriAl_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Detay sütunu her zaman görünür -->
                            <DataGridTemplateColumn x:Name="colCekiciDetay" Header="Detay">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Çekici Detay" Padding="6,2" Click="BtnCekiciDetay_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Dorse Tanımı -->
            <Border Background="#E8F0FE" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sol: Form -->
                    <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,10,0" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="Dorse Tanımı" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDorsePlaka" materialDesignControls:HintAssist.Hint="Yeni Dorse Plakası Giriniz" Width="300" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbDorseTip" materialDesignControls:HintAssist.Hint="Dorse Tipi" Width="300" Margin="0,0,0,5" IsEditable="True"/>
                            <!-- Dorse Butonları -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Güncelle" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDorseGuncelle_Click"/>
                                <Button Content="Kaydet" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDorseKaydet_Click"/>
                                <Button Content="Sil" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="Sil_Click"/>
                                <Button Content="Arşiv" Width="120" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDorseArsiv_Click"/>
                                <Button Content="Eksikleri Düzelt" Width="140" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDorseEksikleriniDuzelt_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Sağ: DataGrid -->
                    <DataGrid Grid.Column="1" x:Name="dgDorseler" AutoGenerateColumns="True" IsReadOnly="True" Background="White" MinHeight="220" HorizontalAlignment="Stretch" MouseDoubleClick="dgDorseler_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="colDorseUnarchive" Header="İşlem">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Geri Al" Padding="6,2" Click="BtnDorseGeriAl_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="colDorseDetay" Header="Detay">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Dorse Detay" Padding="6,2" Click="BtnDorseDetay_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Şoför Tanımı -->
            <Border Background="#E8F0FE" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sol: Form -->
                    <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,10,0" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="Şoför Tanımı" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSoforAd" materialDesignControls:HintAssist.Hint="Yeni Şoför Adı Giriniz" Width="300" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSoforTelefon" materialDesignControls:HintAssist.Hint="Telefon" Width="300" Margin="0,0,0,5"/>
                            <!-- Şoför Butonları -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Güncelle" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnSoforGuncelle_Click"/>
                                <Button Content="Kaydet" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnSoforKaydet_Click"/>
                                <Button Content="Sil" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="Sil_Click"/>
                                <Button x:Name="btnSoforArsiv" Content="Arşiv" Width="120" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnSoforArsiv_Click"/>
                                <Button Content="Eksikleri Düzelt" Width="140" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnSoforEksikleriniDuzelt_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Sağ: DataGrid -->
                    <DataGrid Grid.Column="1" x:Name="dgSoforler" AutoGenerateColumns="True" IsReadOnly="True" Background="White" MinHeight="220" HorizontalAlignment="Stretch" MouseDoubleClick="dgSoforler_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="colSoforUnarchive" Header="İşlem">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Geri Al" Padding="6,2" Click="BtnSoforGeriAl_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="colSoforDetay" Header="Detay">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Personel Detay" Padding="6,2" Click="BtnSoforDetay_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Depo ve Güzergah Tanımı (Yan Yana 2 Sütun) -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sol: Depo Tanımı (Form + DataGrid, DataGrid solda alanın yarısı) -->
                <Border Grid.Column="0" Background="#E8F0FE" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- DataGrid solda -->
                        <DataGrid Grid.Column="0" x:Name="dgDepolar" AutoGenerateColumns="False" IsReadOnly="True" Background="White" MinHeight="220" HorizontalAlignment="Stretch" Margin="0,0,10,0" MouseDoubleClick="dgDepolar_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Depo Adı" Binding="{Binding DepoAdi}" Width="200"/>
                                <DataGridTextColumn Header="Açıklama" Binding="{Binding Aciklama}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!-- Form sağda -->
                        <Border Grid.Column="1" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Depo Tanımı" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtDepoAdi" materialDesignControls:HintAssist.Hint="Depo Adı" Width="300" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtDepoAciklama" materialDesignControls:HintAssist.Hint="Açıklama (opsiyonel)" Width="300" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Kaydet" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDepoKaydet_Click"/>
                                    <Button Content="Güncelle" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDepoGuncelle_Click"/>
                                    <Button Content="Sil" Width="120" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnDepoSil_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Sağ: Güzergah Tanımı (Çıkış-Varış-Ücret-Açıklama) -->
                <Border Grid.Column="1" Background="#E8F0FE" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- DataGrid solda -->
                        <DataGrid Grid.Column="0" x:Name="dgGuzergah" AutoGenerateColumns="False" IsReadOnly="True" Background="White" MinHeight="220" HorizontalAlignment="Stretch" Margin="0,0,10,0" MouseDoubleClick="dgGuzergah_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Çıkış Noktası" Binding="{Binding CikisDepoAdi}" Width="180"/>
                                <DataGridTextColumn Header="Varış Noktası" Binding="{Binding VarisDepoAdi}" Width="180"/>
                                <DataGridTextColumn Header="Ücret" Binding="{Binding Ucret}" Width="120"/>
                                <DataGridTextColumn Header="Açıklama" Binding="{Binding Aciklama}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!-- Form sağda -->
                        <Border Grid.Column="1" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Güzergah Tanımı" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbCikisDepo" materialDesignControls:HintAssist.Hint="Çıkış Noktası" Width="300" Margin="0,0,0,5" DisplayMemberPath="DepoAdi" SelectedValuePath="DepoId"/>
                                <ComboBox x:Name="cmbVarisDepo" materialDesignControls:HintAssist.Hint="Varış Noktası" Width="300" Margin="0,0,0,5" DisplayMemberPath="DepoAdi" SelectedValuePath="DepoId"/>
                                <TextBox x:Name="txtUcret" materialDesignControls:HintAssist.Hint="Ücret" Width="300" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtGuzergahAciklama" materialDesignControls:HintAssist.Hint="Açıklama (opsiyonel)" Width="300" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Kaydet" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnGuzergahKaydet_Click"/>
                                    <Button Content="Güncelle" Width="120" Margin="0,0,10,0" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnGuzergahGuncelle_Click"/>
                                    <Button Content="Sil" Width="120" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="Gray" BorderThickness="1" Click="BtnGuzergahSil_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
